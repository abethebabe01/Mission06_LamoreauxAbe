@{
}

@model List<Movies>

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <h2>Movies List</h2>
    <table class="table table-striped table-dark">
        <tr>
            <th>ID:</th>
            <th>Title:</th>
            <th>Director:</th>
            <th>Year:</th>
            <th>Genre:</th>
            <th>Rating:</th>
            <th>Edited:</th>
            <th>Curretnly Lent To:</th>
            <th>Copied to Plex:</th>
            <th>Notes:</th>
            <th>Edit Record:</th>
            <th>Delete Record:</th>

        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.MovieId</td>
                <td>@x.Title</td>
                <td>@x.Director</td>
                <td>@x.Year</td>
                <td>@x.CategoryId</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.Notes</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit </a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
            </tr>
        }
    </table>
</body>
</html>
